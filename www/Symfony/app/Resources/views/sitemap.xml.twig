<?xml version="1.0" encoding="utf-8"?>
<urlset
xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
>
    <!-- Home -->
    <url><loc>{{ url('home') }}</loc></url>
    <!-- Contact -->
    <url><loc>{{ url('contact') }}</loc></url>
    <!-- Blog -->
    <url><loc>{{ url('blog') }}</loc></url>
    <!-- Blog Tags -->
    {% for tag in tags %}
    <url><loc>{{ url('blog_tag', { tagSlug: tag.slug }) }}</loc></url>
    {% endfor %}
    <!-- Blog Articles -->
    {% for article in articles %}
    <url>
        <loc>{{ url('blog_article', { date: article.date|date('Y-m-d'), slug: article.slug }) }}</loc>
        <lastmod>{{ article.date|date('c') }}</lastmod>
    </url>
    {% endfor %}
    <!-- Cookies -->
    <url><loc>{{ url('cookies') }}</loc></url>
</urlset>
